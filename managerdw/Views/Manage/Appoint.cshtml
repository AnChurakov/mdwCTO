
@{
    ViewBag.Title = "Назначение роли пользователю";
    Layout = "~/Views/Shared/_PanelControl.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">


                @using (Html.BeginForm("AppointRoleUser", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-material ", role = "form" }))
                {
                    @Html.AntiForgeryToken()


                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-5">
                            <select name="User" class="form-control">
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.Email</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-5">
                            <select name="RoleId" class="form-control">
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Назначить роль" class="btn btn-success btn-rounded" />
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>




