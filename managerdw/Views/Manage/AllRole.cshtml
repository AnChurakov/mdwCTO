
@{
    ViewBag.Title = "Все добавленные статусы";
    Layout = "~/Views/Shared/_PanelControl.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Название статуса</th>
                                <th>Удаление</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <tr>
                                  <td>@role.Name</td>
                                  <td>@Html.ActionLink("Удалить", "Delete", "Manage", new { id = role.Id}, new { @class = "btn-sm btn btn-danger"})</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




