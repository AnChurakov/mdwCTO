@model managerdw.Models.ApplicationUser
@{
    Layout = "~/Views/Shared/_PanelControl.cshtml";
    ViewBag.Title = "Добавление участника в проект";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">


                @using (Html.BeginForm("AddUserInProject", "Project", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal ", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                                       

                    <div class="form-group">
                        <label class="col-md-2 control-label">Пользователь</label>
                        <div class="col-md-5">
                            <select class="form-control" name="User">
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.Firstname @user.Lastname - @user.Email</option>
                                }
                            </select>
                            <input type="hidden" name="ProjectId" value="@ViewBag.ProjectId" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Добавить участника" class="btn btn-info" />
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>



